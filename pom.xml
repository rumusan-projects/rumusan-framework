<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.rumusan</groupId>
	<artifactId>rumusan-framework</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<modules>
		<module>rumusan-core</module>
		<module>rumusan-security-oauth2</module>
	</modules>
	<distributionManagement>
		<repository>
			<id>${repo.release.id}</id>
			<url>${repo.release.url}</url>
			<layout>default</layout>
		</repository>
		<snapshotRepository>
			<id>${repo.snapshot.id}</id>
			<url>${repo.snapshot.url}</url>
			<layout>default</layout>
		</snapshotRepository>
	</distributionManagement>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jdk.version>1.8</jdk.version>
		<maven-compiler.version>3.7.0</maven-compiler.version>
		<maven-resources.version>3.0.1</maven-resources.version>
		<spring.version>4.3.12.RELEASE</spring.version>
		<spring-security-oauth2.version>2.2.0.RELEASE</spring-security-oauth2.version>
		<spring-security-web.version>4.2.3.RELEASE</spring-security-web.version>
		<junit.version>4.12</junit.version>
		<jackson.version>2.9.2</jackson.version>
		<mockito-all.version>1.9.5</mockito-all.version>
		<log4j.version>2.9.1</log4j.version>
	</properties>
</project>